 {% extends 'base.html.twig' %}

 {%block body %}
 <article>
    <h2>{{article.title}}</h2>
    <div class="metadata">Ecrit le {{article.createdAt | date('d/m/Y')}} à 
    {{article.createdAt | date('H:i')}} dans la catégorie Politique</div>
    <div class="content">
        <img src="{{article.image}}" alt="">
        {{article.content | raw}}
        

        
    </div>
    <a href="{{ path('blog_show',{'id':article.id})}}"class="btn btn-primary">lire la suite</a>
 </article>
 {% endblock %}